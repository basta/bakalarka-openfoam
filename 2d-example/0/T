FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 50;

boundaryField
{
    frontAndBack
    {
        type            empty;
    }

    // WALLS
    fixedWalls {
        type zeroGradient;
    }

    // HEATER
    hotEnd {
        type fixedValue;
        value uniform 100;
    }

    // COOLER {
    coldEnd {
        type fixedValue;
        value uniform 0;
    }
}


